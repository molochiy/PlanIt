<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/libs/jquery/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/libs/jquery/jquery.validate.unobtrusive.bootstrap.js"></script>
    <script src="~/Scripts/libs/jquery/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/libs/bootstrap/bootstrap.js"></script>
    <script src="~/Scripts/libs/bootstrap/bootstrap-datepicker.js"></script>
</head>
<body>
    <nav class="navbar navbar-fixed-left navbar-minimal animate open" role="navigation">
        <div class="navbar-toggler animate">
            <span class="menu-icon"></span>
        </div>
        <ul class="navbar-menu animate">
            <li>
                <a href="@Url.Action("Index", "Home")" class="animate">
                    <span class="desc animate"> My plans </span>
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("AddPlan", "Plan")" class="animate">
                    <span class="desc animate"> Add plan </span>
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("EditProfile", "User")" class="animate">
                    <span class="desc animate"> Profile </span>
                    <span class="glyphicon glyphicon-user"></span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("LogOut", "User")" class="animate">
                    <span class="desc animate"> Logout </span>
                    <span class="glyphicon glyphicon-log-out"></span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="row panel">
        <div>
            @RenderBody()
        </div>
    </div>
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - PlanIt</p>
        </footer>
    </div>
    <script src="~/Content/js/user/menu.js"></script>
</body>
</html>