<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand navbar-header" href="">PlanIt</a>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="">About</a>
                    </li>
                    <li>
                        <a href="">Contact</a>
                    </li>
                </ul>
                <div class="nav navbar-nav navbar-right navbar-ex1-collapse hidden-xs">
                    @if (Request.IsAuthenticated)
                    {
                        <strong>
                            @Html.Encode(User.Identity.Name)
                        </strong>
                        @Html.ActionLink("Log Out", "LogOut", "User", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default btn-primary", verticalLayout = true })
                    }
                    else
                    {
                        @Html.ActionLink("Log In", "LogIn", "User", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default btn-primary", verticalLayout = true })
                        @Html.ActionLink("Sign Up", "SignUp", "User", new { returnUrl = Request.Url.PathAndQuery }, new { @class = "btn btn-default btn-warning", verticalLayout = true })
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row panel">
        <div class="col-sm-3 hidden-xs">
        </div>
        <div class="col-xs-12 col-sm-5">
            @RenderBody()
        </div>
        <div class="col-sm-3 hidden-xs">
        </div>
    </div>
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - PlanIt</p>
        </footer>
    </div>
</body>
</html>